{
  "version": "11.0.3",
  "name": "bellajs",
  "description": "A useful helper for any javascript program",
  "homepage": "https://www.npmjs.com/package/bellajs",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndaidong/bellajs"
  },
  "author": "@ndaidong",
  "main": "./dist/cjs/bella.js",
  "module": "./src/main.js",
  "browser": "./dist/bella.esm.js",
  "type": "module",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "lint": "standard .",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --verbose --coverage=true --unhandled-rejections=strict --detectOpenHandles --env=jsdom",
    "build": "node build.js src/main.js",
    "reset": "node reset"
  },
  "devDependencies": {
    "esbuild": "^0.14.42",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "standard": "^17.0.0"
  },
  "standard": {
    "ignore": [
      "/dist"
    ]
  },
  "keywords": [
    "detection",
    "manipulation",
    "templating",
    "utilities"
  ],
  "license": "MIT"
}
