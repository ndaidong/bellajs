{
  "version": "11.0.0rc2",
  "name": "bellajs",
  "description": "A useful helper for any javascript program",
  "homepage": "https://www.npmjs.com/package/bellajs",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndaidong/bellajs"
  },
  "author": "@ndaidong",
  "main": "./dist/cjs/bella.js",
  "module": "./src/main.js",
  "browser": "./dist/bella.min.js",
  "type": "module",
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "lint": "standard ./src",
    "pretest": "npm run lint && npm run build",
    "test": "NODE_ENV=test jest --verbose --coverage=true --unhandled-rejections=strict --detectOpenHandles --env=jsdom",
    "build": "node build.js src/main.js",
    "reset": "node reset"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.7",
    "esbuild": "^0.14.10",
    "jest": "^27.3.1"
  },
  "standard": {
    "ignore": [
      "./dist"
    ]
  },
  "keywords": [
    "detection",
    "manipulation",
    "templating",
    "utilities"
  ],
  "license": "MIT"
}
