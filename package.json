{
  "version": "10.0.2",
  "name": "bellajs",
  "description": "A useful helper for any javascript program",
  "homepage": "https://www.npmjs.com/package/bellajs",
  "repository": {
    "type": "git",
    "url": "https://github.com/ndaidong/bellajs"
  },
  "author": "@ndaidong",
  "main": "./dist/bella.js",
  "module": "./src/main",
  "browser": "./dist/bella.min.js",
  "engines": {
    "node": ">= 10.14.2"
  },
  "scripts": {
    "lint": "standard ./src",
    "pretest": "npm run lint && npm run build",
    "test": "NODE_ENV=test jest --verbose --coverage=true --unhandled-rejections=strict --detectOpenHandles --env=jsdom",
    "build": "gccmin -e src/main.js -n bella -o dist -p package.json",
    "reset": "node reset"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "gcc-min": "^7.3.0",
    "jest": "^27.3.1"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  },
  "standard": {
    "ignore": [
      "dist"
    ]
  },
  "keywords": [
    "detection",
    "manipulation",
    "templating",
    "utilities"
  ],
  "license": "MIT"
}
